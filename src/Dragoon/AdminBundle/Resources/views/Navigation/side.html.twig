    <li class="sidebar-search">
        <div class="input-group custom-search-form">
            <input type="text" class="form-control" placeholder="Search...">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
        <!-- /input-group -->
    </li>
    {% for item in navigation %}
    <li>
        <a href="{% if item.route is defined %}
                {% if item.route_param is defined %}
                    {{ path(item.route, {'entity':item.route_param|lower}) }}
                {% else %}
                    {{ path(item.route) }}
                {% endif %}
            {% else %}
                {{ item.href }}
            {% endif %}">
            {% if item.icone is defined %}
                <i class="fa {{ item.icone }} fa-fw"></i>
            {% endif %}
            {{ item.lib }}
            {% if item.second is defined %}<span class="fa arrow"></span>{% endif %}
        </a>
        {% if item.second is defined %}
            <ul class="nav nav-second-level">
                {% for item2 in item.second %}
                <li>
                    <a href="{% if item2.route is defined %}
                            {% if item2.route_param is defined %}
                                {{ path(item2.route, {'entity':item2.route_param|lower}) }}
                            {% else %}
                                {{ path(item2.route) }}
                            {% endif %}
                        {% else %}
                            {{ item2.href }}
                        {% endif %}">
                        {% if item2.icone != '' %}
                            <i class="fa {{ item2.icone }} fa-fw"></i>
                        {% endif %}
                        {{ item2.lib }}
                        {% if item2.second is defined %}<span class="fa arrow"></span>{% endif %}
                    </a>
                    {% if item2.second is defined %}
                        <ul class="nav nav-third-level">
                            {% for item3 in item2.second %}
                            <li>
                                <a href="{% if item3.route is defined %}
                                        {% if item3.route_param is defined %}
                                            {{ path(item3.route, {'entity':item3.route_param|lower}) }}
                                        {% else %}
                                            {{ path(item3.route) }}
                                        {% endif %}
                                    {% else %}
                                        {{ item3.href }}
                                    {% endif %}">
                                    {% if item3.icone != '' %}
                                        <i class="fa {{ item3.icone }} fa-fw"></i>
                                    {% endif %}
                                    {{ item3.lib }}
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
                {% endfor %}
            </ul>
        {% endif %}
    </li>
    {% endfor %}
    
    
